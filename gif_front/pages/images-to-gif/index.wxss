.page {
  min-height: 100vh;
  padding: 0 0;
  padding-top: calc(env(safe-area-inset-top) + 64rpx);
  padding-bottom: calc(env(safe-area-inset-bottom) + 124rpx);
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.top-toolbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 64rpx;
  padding: 0 24rpx;
  padding-top: env(safe-area-inset-top);
  display: flex;
  align-items: center;
  justify-content: space-between;
  z-index: 100;
  background: rgba(255, 255, 255, 0.72);
  backdrop-filter: blur(18rpx);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  box-sizing: border-box;
  pointer-events: none;
}

.top-toolbar-left {
  flex: 1;
  min-width: 0;
}

.top-toolbar-right {
  display: flex;
  align-items: center;
  gap: 12rpx;
  pointer-events: auto;
}

.top-toolbar-count-pill {
  display: inline-flex;
  align-items: center;
  padding: 10rpx 16rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.92);
  border: 1rpx solid rgba(0, 0, 0, 0.08);
  box-shadow: 0 4rpx 14rpx rgba(0, 0, 0, 0.08);
  box-sizing: border-box;
  pointer-events: auto;
}

.top-toolbar-count {
  font-size: 24rpx;
  font-weight: 700;
  color: rgba(0, 0, 0, 0.7);
}

.ui-btn {
  width: auto;
  min-width: 112rpx;
  height: 56rpx;
  padding: 0 16rpx;
  border-radius: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 6rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.ui-btn:active {
  transform: scale(0.98);
  opacity: 0.92;
}

.ui-btn-icon {
  font-size: 26rpx;
  font-weight: 800;
  line-height: 1;
}

.ui-btn-label {
  font-size: 22rpx;
  font-weight: 700;
  line-height: 1;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.ui-btn-ghost {
  background: rgba(255, 255, 255, 0.92);
  border: 1rpx solid rgba(0, 0, 0, 0.08);
  box-shadow: 0 4rpx 14rpx rgba(0, 0, 0, 0.08);
}

.ui-btn-ghost .ui-btn-icon,
.ui-btn-ghost .ui-btn-label {
  color: rgba(0, 0, 0, 0.8);
}

.ui-btn-green {
  background: linear-gradient(135deg, #2ad268, #20c05c);
  border: 1rpx solid rgba(32, 192, 92, 0.12);
  box-shadow: 0 10rpx 24rpx rgba(32, 192, 92, 0.22);
}

.ui-btn-green .ui-btn-icon,
.ui-btn-green .ui-btn-label {
  color: #fff;
}

.panel {
  margin: 10rpx 20rpx 8rpx;
  border-radius: 22rpx;
  padding: 14rpx;
  box-sizing: border-box;
}

.preview-panel {
  overflow: hidden;
}

.preview {
  width: 100%;
  background: rgba(0, 0, 0, 0.04);
  border-radius: 18rpx;
  padding: 12rpx;
  box-sizing: border-box;
}

.grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
}

.img-item {
  position: relative;
  width: 100%;
  padding-top: 100%;
  border-radius: 18rpx;
  overflow: hidden;
  background: rgba(0, 0, 0, 0.06);
}

.img-item-dragging {
  box-shadow:
    0 0 0 2rpx rgba(32, 192, 92, 0.5),
    0 12rpx 22rpx rgba(0, 0, 0, 0.08);
}

.img-item-active {
  box-shadow:
    0 0 0 2rpx rgba(32, 192, 92, 0.9),
    0 12rpx 22rpx rgba(0, 0, 0, 0.08);
}

.img {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.del {
  position: absolute;
  right: 8rpx;
  top: 8rpx;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 999rpx;
  background: rgba(0, 0, 0, 0.45);
  color: #fff;
  font-size: 28rpx;
}

.mode-badge {
  position: absolute;
  left: 8rpx;
  bottom: 8rpx;
  padding: 6rpx 10rpx;
  border-radius: 999rpx;
  background: rgba(32, 192, 92, 0.5);
  color: #fff;
  font-size: 20rpx;
  font-weight: 700;
  line-height: 1;
}

.crop-actions {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.ui-btn-mini {
  min-width: 0;
  height: 52rpx;
  padding: 0 14rpx;
  border-radius: 16rpx;
}

.ui-btn-mini .ui-btn-label {
  font-size: 22rpx;
}

.crop-modal {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
  box-sizing: border-box;
}

.drag-layer {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 9000;
}

.drag-ghost {
  position: absolute;
  border-radius: 18rpx;
  overflow: hidden;
  transform: scale(1.05);
  box-shadow: 0 18rpx 34rpx rgba(0, 0, 0, 0.22);
}

.drag-ghost-img {
  width: 100%;
  height: 100%;
  display: block;
}

.crop-mask {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.55);
}

.crop-card {
  position: relative;
  width: 100%;
  max-width: 92vw;
  border-radius: 22rpx;
  overflow: hidden;
  z-index: 1;
}

.crop-header {
  height: 92rpx;
  padding: 0 18rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.06);
  box-sizing: border-box;
}

.crop-title {
  font-size: 28rpx;
  font-weight: 800;
  color: rgba(0, 0, 0, 0.78);
}

.crop-btn {
  min-width: 92rpx;
  height: 60rpx;
  padding: 0 16rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  font-weight: 800;
  color: rgba(0, 0, 0, 0.72);
  background: rgba(255, 255, 255, 0.8);
  border: 1rpx solid rgba(0, 0, 0, 0.08);
  box-sizing: border-box;
}

.crop-btn-primary {
  color: #fff;
  background: linear-gradient(135deg, #2ad268, #20c05c);
  border: 1rpx solid rgba(32, 192, 92, 0.12);
}

.crop-body {
  padding: 18rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

.crop-area {
  position: relative;
  background-color: #e9eef4;
  background-image:
    linear-gradient(90deg, rgba(0, 0, 0, 0.06) 1px, transparent 1px),
    linear-gradient(rgba(0, 0, 0, 0.06) 1px, transparent 1px);
  background-size: 36rpx 36rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.crop-bg {
  display: block;
}

.crop-mask-top,
.crop-mask-left,
.crop-mask-right,
.crop-mask-bottom {
  position: absolute;
  background: rgba(255, 255, 255, 0.52);
}

.crop-box {
  position: absolute;
  box-sizing: border-box;
  border: 4rpx solid rgba(255, 59, 48, 0.95);
  border-radius: 10rpx;
}

.crop-grid {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
}

.crop-grid-v,
.crop-grid-h {
  position: absolute;
  background: rgba(255, 255, 255, 0.75);
}

.crop-grid-v {
  top: 0;
  bottom: 0;
  width: 2rpx;
}

.crop-grid-h {
  left: 0;
  right: 0;
  height: 2rpx;
}

.crop-grid-v.v1 { left: 33.3333%; }
.crop-grid-v.v2 { left: 66.6666%; }
.crop-grid-h.h1 { top: 33.3333%; }
.crop-grid-h.h2 { top: 66.6666%; }

.crop-handle {
  position: absolute;
  width: 26rpx;
  height: 26rpx;
  border-radius: 999rpx;
  background: #20c05c;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.18);
}

.h-tl { left: -13rpx; top: -13rpx; }
.h-tr { right: -13rpx; top: -13rpx; }
.h-bl { left: -13rpx; bottom: -13rpx; }
.h-br { right: -13rpx; bottom: -13rpx; }
.h-tm { left: 50%; top: -13rpx; transform: translateX(-50%); }
.h-bm { left: 50%; bottom: -13rpx; transform: translateX(-50%); }
.h-ml { left: -13rpx; top: 50%; transform: translateY(-50%); }
.h-mr { right: -13rpx; top: 50%; transform: translateY(-50%); }

.crop-footer {
  width: 100%;
  margin-top: 14rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
}

.crop-btn-ghost {
  background: rgba(255, 255, 255, 0.84);
  border: 1rpx solid rgba(0, 0, 0, 0.08);
  color: rgba(0, 0, 0, 0.72);
}

.crop-hint {
  margin-top: 14rpx;
  font-size: 22rpx;
  color: rgba(0, 0, 0, 0.5);
}

.empty {
  padding: 28rpx 0 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 800;
}

.empty-desc {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.55);
}

.empty-actions {
  margin-top: 18rpx;
}

.options {
  margin: 0 20rpx 8rpx;
  border-radius: 22rpx;
  padding: 16rpx 18rpx 18rpx;
  box-sizing: border-box;
}

.slider {
  width: 100%;
}

.opt-row {
  min-height: 72rpx;
  padding: 12rpx 10rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.opt-row-tappable:active {
  background: rgba(0, 0, 0, 0.04);
  border-radius: 14rpx;
}

.opt-hint {
  margin-top: 2rpx;
  margin-bottom: 8rpx;
  padding: 0 4rpx;
  font-size: 22rpx;
  color: rgba(0, 0, 0, 0.45);
}

.quality {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.quality-text {
  font-size: 26rpx;
  color: rgba(0, 0, 0, 0.55);
}

.opt-label {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.7);
}

.opt-value {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.55);
}

.divider {
  height: 1px;
  background: rgba(0, 0, 0, 0.08);
  transform: scaleY(0.5);
  margin: 6rpx 0;
}

.result {
  margin: 0 20rpx 10rpx;
  border-radius: 22rpx;
  padding: 16rpx 18rpx 18rpx;
  box-sizing: border-box;
}

.result-title {
  font-size: 28rpx;
  font-weight: 800;
  margin-bottom: 12rpx;
}

.result-img {
  width: 100%;
  border-radius: 18rpx;
  overflow: hidden;
  background: rgba(0, 0, 0, 0.04);
}

.result-actions {
  margin-top: 14rpx;
}

.bottom {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 16rpx 24rpx calc(env(safe-area-inset-bottom) + 16rpx);
  background: rgba(255, 255, 255, 0.72);
  backdrop-filter: blur(18rpx);
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  box-sizing: border-box;
}

.btn {
  width: 100%;
  height: 96rpx;
  border-radius: 20rpx;
  font-size: 34rpx;
  font-weight: 800;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

.btn-primary {
  background: linear-gradient(135deg, #2ad268, #20c05c);
  box-shadow:
    0 14rpx 30rpx rgba(32, 192, 92, 0.22),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.35);
  border: none;
}

.btn[disabled] {
  opacity: 0.55;
}

.progress {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.55);
  text-align: center;
}

.hidden-canvas {
  position: fixed;
  left: -9999px;
  top: -9999px;
  width: 2px;
  height: 2px;
  opacity: 0;
}
