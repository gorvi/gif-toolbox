.page {
  min-height: 100vh;
  padding: 36rpx 28rpx 220rpx;
  box-sizing: border-box;
}

.header {
  margin-bottom: 22rpx;
}

.title {
  font-size: 44rpx;
  font-weight: 800;
}

.subtitle {
  margin-top: 10rpx;
  font-size: 26rpx;
  color: rgba(0, 0, 0, 0.55);
}

.panel {
  border-radius: 26rpx;
  padding: 18rpx 18rpx 18rpx;
  box-sizing: border-box;
}

.panel-top {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 14rpx;
}

.count {
  font-size: 26rpx;
  color: rgba(0, 0, 0, 0.65);
}

.actions {
  display: flex;
  gap: 12rpx;
}

.action {
  padding: 10rpx 16rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.75);
}

.grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 12rpx;
}

.img-item {
  position: relative;
  width: 100%;
  padding-top: 100%;
  border-radius: 18rpx;
  overflow: hidden;
  background: rgba(0, 0, 0, 0.06);
}

.img {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.del {
  position: absolute;
  right: 8rpx;
  top: 8rpx;
  width: 34rpx;
  height: 34rpx;
  line-height: 34rpx;
  text-align: center;
  border-radius: 999rpx;
  background: rgba(0, 0, 0, 0.45);
  color: #fff;
  font-size: 26rpx;
}

.empty {
  padding: 36rpx 0 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 800;
}

.empty-desc {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.55);
}

.options {
  margin-top: 18rpx;
  border-radius: 26rpx;
  padding: 16rpx 18rpx 18rpx;
  box-sizing: border-box;
}

.opt-row {
  padding: 10rpx 4rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.opt-hint {
  margin-top: 2rpx;
  margin-bottom: 8rpx;
  padding: 0 4rpx;
  font-size: 22rpx;
  color: rgba(0, 0, 0, 0.45);
}

.quality {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.quality-text {
  font-size: 26rpx;
  color: rgba(0, 0, 0, 0.55);
}

.opt-label {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.7);
}

.opt-value {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.55);
}

.divider {
  height: 1px;
  background: rgba(0, 0, 0, 0.08);
  transform: scaleY(0.5);
  margin: 8rpx 0;
}

.result {
  margin-top: 18rpx;
  border-radius: 26rpx;
  padding: 16rpx 18rpx 18rpx;
  box-sizing: border-box;
}

.result-title {
  font-size: 28rpx;
  font-weight: 800;
  margin-bottom: 12rpx;
}

.result-img {
  width: 100%;
  border-radius: 18rpx;
  overflow: hidden;
  background: rgba(0, 0, 0, 0.04);
}

.result-actions {
  margin-top: 14rpx;
}

.bottom {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 18rpx 24rpx 24rpx;
  box-sizing: border-box;
}

.btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  border-radius: 22rpx;
  font-size: 34rpx;
  font-weight: 800;
}

.progress {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.55);
  text-align: center;
}

.hidden-canvas {
  position: fixed;
  left: -9999px;
  top: -9999px;
  width: 2px;
  height: 2px;
  opacity: 0;
}


