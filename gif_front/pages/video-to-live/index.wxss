.page {
  padding: 28rpx 28rpx 40rpx;
  box-sizing: border-box;
  min-height: 100vh;
}

.safe-area {
  padding-bottom: calc(env(safe-area-inset-bottom) + 40rpx);
}

.glass {
  background: rgba(255, 255, 255, 0.55);
  border: 1rpx solid rgba(255, 255, 255, 0.7);
  border-radius: 24rpx;
  backdrop-filter: blur(16rpx);
  -webkit-backdrop-filter: blur(16rpx);
}

.glass-strong {
  background: rgba(255, 255, 255, 0.75);
  border: 1rpx solid rgba(255, 255, 255, 0.85);
  border-radius: 24rpx;
  backdrop-filter: blur(18rpx);
  -webkit-backdrop-filter: blur(18rpx);
}

.top-toolbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.top-toolbar-count-pill {
  padding: 12rpx 18rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.65);
  border: 1rpx solid rgba(255, 255, 255, 0.85);
}

.top-toolbar-count {
  font-size: 24rpx;
  color: #3b3e45;
  display: inline-block;
  max-width: 520rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.top-toolbar-right {
  display: flex;
  gap: 12rpx;
  align-items: center;
}

.top-toolbar-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 12rpx 16rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.65);
  border: 1rpx solid rgba(255, 255, 255, 0.85);
}

.top-toolbar-text {
  font-size: 24rpx;
  font-weight: 600;
  color: #2b2f35;
}

.top-toolbar-icon {
  font-size: 22rpx;
  color: rgba(0, 0, 0, 0.45);
}

.panel {
  padding: 22rpx;
  margin-bottom: 18rpx;
}

.preview-panel {
  padding: 18rpx;
}

.preview {
  width: 100%;
}

.video {
  width: 100%;
  height: 420rpx;
  border-radius: 18rpx;
  background: rgba(0, 0, 0, 0.06);
}

.preview-actions {
  margin-top: 14rpx;
  display: flex;
  justify-content: center;
  gap: 14rpx;
}

.ui-btn {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 14rpx 18rpx;
  border-radius: 16rpx;
}

.ui-btn-ghost {
  background: rgba(255, 255, 255, 0.55);
  border: 1rpx solid rgba(255, 255, 255, 0.85);
}

.ui-btn-orange {
  background: rgba(255, 122, 0, 0.12);
  border: 1rpx solid rgba(255, 122, 0, 0.25);
}

.ui-btn-icon {
  font-size: 34rpx;
  line-height: 1;
  color: #2b2f35;
}

.ui-btn-label {
  font-size: 26rpx;
  color: #2b2f35;
}

.empty {
  padding: 60rpx 20rpx;
  text-align: center;
}

.empty-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #22252a;
  margin-bottom: 10rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #666b73;
  margin-bottom: 24rpx;
}

.empty-actions {
  display: flex;
  justify-content: center;
  gap: 14rpx;
}

.options {
  padding: 22rpx 22rpx 10rpx;
  margin-bottom: 18rpx;
}

.section-label {
  font-size: 24rpx;
  font-weight: 800;
  color: rgba(0, 0, 0, 0.55);
  padding: 8rpx 6rpx 0;
}

.opt-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 18rpx 6rpx;
}

.opt-label {
  font-size: 28rpx;
  color: #2b2f35;
}

.opt-value {
  font-size: 28rpx;
  color: #2b2f35;
  font-weight: 600;
}

.opt-hint {
  font-size: 24rpx;
  color: #6c717a;
  padding: 0 6rpx 14rpx;
}

.divider {
  height: 1rpx;
  background: rgba(0, 0, 0, 0.06);
  margin: 8rpx 0;
}

.quality {
  display: flex;
  align-items: center;
  gap: 14rpx;
}

.quality-text {
  font-size: 26rpx;
  color: #2b2f35;
}

.bottom {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-top: 10rpx;
}

.btn {
  width: 100%;
  height: 88rpx;
  border-radius: 18rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  line-height: 1;
}

.btn-primary {
  background: #20c05c;
  color: #fff;
}

.btn-orange {
  background: linear-gradient(135deg, #ff7a00 0%, #ffb14a 100%);
  color: #fff;
}

.btn-ghost {
  background: rgba(255, 255, 255, 0.55);
  border: 1rpx solid rgba(255, 255, 255, 0.85);
  color: #2b2f35;
}

.progress {
  padding: 0 6rpx;
}

.progress-text {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.55);
  text-align: center;
}

.out-panel {
  padding: 18rpx;
}

.out-title {
  font-size: 26rpx;
  font-weight: 700;
  color: #22252a;
  margin-bottom: 12rpx;
  padding: 0 6rpx;
}

.out-video {
  height: 420rpx;
}

