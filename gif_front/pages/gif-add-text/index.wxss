.page {
  padding: 28rpx 28rpx 40rpx;
  box-sizing: border-box;
  min-height: 100vh;
  background: linear-gradient(180deg, #f7fbff 0%, #f3f5ff 100%);
}

.safe-area {
  padding-bottom: calc(env(safe-area-inset-bottom) + 40rpx);
}

.glass {
  background: rgba(255, 255, 255, 0.55);
  border: 1rpx solid rgba(255, 255, 255, 0.7);
  border-radius: 24rpx;
  backdrop-filter: blur(16rpx);
  -webkit-backdrop-filter: blur(16rpx);
}

.glass-strong {
  background: rgba(255, 255, 255, 0.75);
  border: 1rpx solid rgba(255, 255, 255, 0.85);
  border-radius: 24rpx;
  backdrop-filter: blur(18rpx);
  -webkit-backdrop-filter: blur(18rpx);
}

.top-toolbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.top-toolbar-count-pill {
  padding: 12rpx 18rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.65);
  border: 1rpx solid rgba(255, 255, 255, 0.85);
}

.top-toolbar-count {
  font-size: 24rpx;
  color: #3b3e45;
  display: inline-block;
  max-width: 520rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.ui-btn {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 14rpx 18rpx;
  border-radius: 16rpx;
}

.ui-btn-ghost {
  background: rgba(255, 255, 255, 0.55);
  border: 1rpx solid rgba(255, 255, 255, 0.85);
}

.ui-btn-green {
  background: rgba(32, 192, 92, 0.12);
  border: 1rpx solid rgba(32, 192, 92, 0.25);
}

.ui-btn-icon {
  font-size: 34rpx;
  line-height: 1;
  color: #2b2f35;
}

.ui-btn-label {
  font-size: 26rpx;
  color: #2b2f35;
}

.preview-panel {
  padding: 22rpx;
  margin-bottom: 18rpx;
}

.empty {
  padding: 60rpx 20rpx;
  text-align: center;
}

.empty-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #22252a;
  margin-bottom: 10rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #666b73;
  margin-bottom: 24rpx;
}

.empty-actions {
  display: flex;
  justify-content: center;
  gap: 14rpx;
}

.preview-row {
  display: flex;
  gap: 18rpx;
  flex-wrap: wrap;
}

.preview-col {
  flex: 1;
  min-width: 0;
}

.preview-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #22252a;
  margin-bottom: 12rpx;
}

.preview-img {
  width: 100%;
  height: 380rpx;
  border-radius: 18rpx;
  background: rgba(0, 0, 0, 0.05);
}

.preview-sub {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #666b73;
}

.out-stale {
  color: #9a6a00;
  font-weight: 600;
}

.preview-actions {
  margin-top: 18rpx;
  display: flex;
  justify-content: center;
  gap: 14rpx;
}

.options {
  padding: 22rpx 22rpx 10rpx;
  margin-bottom: 18rpx;
}

.section-label {
  font-size: 24rpx;
  font-weight: 800;
  color: rgba(0, 0, 0, 0.55);
  padding: 8rpx 6rpx 0;
}

.opt-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 18rpx 6rpx;
}

.opt-row-top {
  padding-bottom: 10rpx;
}

.opt-row-tappable:active {
  opacity: 0.75;
}

.opt-label {
  font-size: 28rpx;
  color: #2b2f35;
}

.opt-value {
  font-size: 28rpx;
  color: #2b2f35;
  font-weight: 600;
}

.opt-hint {
  font-size: 24rpx;
  color: #6c717a;
  padding: 0 6rpx 14rpx;
}

.opt-hint-warn {
  color: #9a6a00;
  background: rgba(255, 214, 102, 0.18);
  border: 1rpx solid rgba(255, 214, 102, 0.28);
  border-radius: 16rpx;
  padding: 14rpx 16rpx;
  margin: 8rpx 0 16rpx;
}

.divider {
  height: 1rpx;
  background: rgba(0, 0, 0, 0.06);
  margin: 8rpx 0;
}

.quality {
  display: flex;
  align-items: center;
  gap: 14rpx;
}

.quality-text {
  font-size: 26rpx;
  color: #2b2f35;
}

.text-input {
  width: 100%;
  min-height: 96rpx;
  padding: 18rpx 18rpx;
  border-radius: 18rpx;
  background: rgba(255, 255, 255, 0.7);
  border: 1rpx solid rgba(255, 255, 255, 0.9);
  box-sizing: border-box;
  font-size: 28rpx;
  color: #2b2f35;
  line-height: 1.4;
}

.bottom {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-top: 10rpx;
}

.btn {
  width: 100%;
  height: 88rpx;
  border-radius: 18rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  line-height: 1;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
}

.btn-ghost {
  background: rgba(255, 255, 255, 0.7);
  color: #2b2f35;
  border: 1rpx solid rgba(255, 255, 255, 0.9);
}

.progress {
  padding: 6rpx 0 0;
}

.progress-text {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #666b73;
  text-align: center;
}

.hidden-canvas {
  position: fixed;
  left: -9999px;
  top: -9999px;
  width: 2px;
  height: 2px;
  opacity: 0;
}

.preview-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 2000;
  background: rgba(0, 0, 0, 0.86);
  backdrop-filter: blur(18rpx);
  -webkit-backdrop-filter: blur(18rpx);
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.18s ease;
}

.preview-modal-show {
  opacity: 1;
  pointer-events: auto;
}

.preview-hit-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.preview-viewer {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
  box-sizing: border-box;
}

.preview-viewer-img {
  width: 92vw;
  height: 70vh;
  border-radius: 18rpx;
  background: rgba(255, 255, 255, 0.04);
}

.preview-topbar {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  padding: calc(env(safe-area-inset-top) + 18rpx) 18rpx 14rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  box-sizing: border-box;
  transition: opacity 0.18s ease, transform 0.18s ease;
}

.preview-topbar-show {
  opacity: 1;
  transform: translateY(0);
}

.preview-topbar-hide {
  opacity: 0;
  transform: translateY(-10rpx);
}

.preview-close-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.12);
  border: 1rpx solid rgba(255, 255, 255, 0.18);
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgba(255, 255, 255, 0.92);
  font-size: 46rpx;
  font-weight: 900;
  line-height: 1;
}

.preview-close-btn:active {
  transform: scale(0.98);
  opacity: 0.92;
}

.preview-topbar-space {
  flex: 1;
}

.preview-counter {
  padding: 14rpx 18rpx;
  border-radius: 999rpx;
  background: rgba(0, 0, 0, 0.32);
  border: 1rpx solid rgba(255, 255, 255, 0.14);
  color: rgba(255, 255, 255, 0.92);
  font-size: 24rpx;
  font-weight: 800;
  line-height: 1;
}

.preview-nav-zone {
  position: absolute;
  top: 0;
  bottom: 0;
  width: 18vw;
  max-width: 240rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: opacity 0.18s ease;
}

.preview-nav-zone-left {
  left: 0;
}

.preview-nav-zone-right {
  right: 0;
}

.preview-nav-zone-show {
  opacity: 1;
}

.preview-nav-zone-hide {
  opacity: 0;
}

.preview-nav-zone-disabled {
  opacity: 0.12;
}

.preview-nav-icon {
  width: 68rpx;
  height: 68rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.12);
  border: 1rpx solid rgba(255, 255, 255, 0.18);
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgba(255, 255, 255, 0.92);
  font-size: 52rpx;
  font-weight: 900;
  line-height: 1;
}
