  box-shadow: 0 6rpx 18rpx rgba(255, 71, 87, 0.25);
  box-sizing: border-box;
}

.top-toolbar-export-text {
  color: #fff;
  font-size: 24rpx;
  font-weight: 600;
  line-height: 1;
}

.panel {
