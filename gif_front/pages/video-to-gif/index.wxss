/* 主时间线（中间固定播放头 + 可横向滚动刻度条） */
.main-timeline {
  margin: 8rpx 24rpx 6rpx;
  position: relative;
  height: 120rpx;
  border-radius: 22rpx;
  background: rgba(255, 255, 255, 0.92);
  box-shadow: 0 6rpx 18rpx rgba(0, 0, 0, 0.06);
  overflow: hidden;
  box-sizing: border-box;
}

.main-timeline-scroll {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}

.main-timeline-inner {
  position: relative;
  height: 100%;
  margin: 0 36rpx; /* 和下方绿条对齐，留出两侧手柄空间 */
}

.main-timeline-inner-anim {
  transition: transform 120ms linear;
  will-change: transform;
}

.main-timeline-range {
  position: absolute;
  top: 50rpx;
  height: 34rpx;
  border-radius: 18rpx;
  background: linear-gradient(180deg, rgba(42, 210, 104, 0.92), rgba(32, 192, 92, 0.88));
  box-shadow: 0 4rpx 16rpx rgba(32, 192, 92, 0.35);
  min-width: 10rpx;
  pointer-events: none; /* 实际拖动由上面的 main-timeline-range-hit 负责 */
  z-index: 4;
}

/* 复用下方绿条的刻度样式 */
.main-timeline-tick {
  position: absolute;
  /* 继续往上提，让刻度线几乎贴到数字下边缘 */
  top: 24rpx;
  width: 2rpx;
  background: rgba(0, 0, 0, 0.25);
  transform: translateX(-50%);
}

.main-timeline-tick-small {
  height: 8rpx;
  opacity: 0.3;
  width: 1rpx;
}

.main-timeline-tick-mid {
  height: 18rpx;
  opacity: 0.65;
  width: 2rpx;
  background: rgba(0, 0, 0, 0.4);
}

.main-timeline-tick-big {
  height: 30rpx;
  opacity: 0.95;
  width: 2rpx;
  background: rgba(0, 0, 0, 0.55);
}

.main-timeline-tick-label {
  position: absolute;
  /* 再往下 2rpx，保持贴边又不被裁剪 */
  top: -30rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 18rpx;
  color: rgba(0, 0, 0, 0.65);
  background: rgba(255, 255, 255, 0.92);
  padding: 2rpx 8rpx;
  border-radius: 8rpx;
  white-space: nowrap;
}

.main-timeline-playhead {
  position: absolute;
  top: 8rpx;
  bottom: 28rpx;
  left: 50%;
  width: 3rpx;
  transform: translateX(-50%);
  background: linear-gradient(
    180deg,
    rgba(255, 71, 87, 0.95),
    rgba(255, 149, 0, 0.95)
  );
  box-shadow: 0 0 10rpx rgba(255, 71, 87, 0.3);
  z-index: 5;
}

.main-timeline-range-hit {
  position: absolute;
  top: 40rpx;
  height: 40rpx;
  /* 与 main-timeline-range 对齐，但允许更高的触摸区域，提升操作手感 */
  transform: translateY(-10rpx);
  z-index: 6;
}

/* 主时间线左右两端的起止时间文本 */
.main-timeline-end-label {
  position: absolute;
  bottom: 8rpx;
  font-size: 22rpx;
  color: rgba(0, 0, 0, 0.65);
}

.main-timeline-end-label-left {
  left: 32rpx;
}

.main-timeline-end-label-right {
  right: 32rpx;
  text-align: right;
}

/* 主时间线左右手柄（代替下方绿条上的白色滑块） */
.main-timeline-handle {
  position: absolute;
  top: 46rpx;
  width: 56rpx;
  height: 56rpx;
  transform: translate(-50%, 0);
  border-radius: 999rpx;
  background-color: rgba(255, 255, 255, 0.98);
  background-image: repeating-linear-gradient(
    90deg,
    rgba(0, 0, 0, 0.12) 0,
    rgba(0, 0, 0, 0.12) 4rpx,
    rgba(0, 0, 0, 0.02) 4rpx,
    rgba(0, 0, 0, 0.02) 8rpx
  );
  box-shadow:
    0 4rpx 16rpx rgba(0, 0, 0, 0.28),
    inset 0 0 0 2rpx rgba(255, 255, 255, 0.95);
  border: 2rpx solid rgba(0, 0, 0, 0.08);
  z-index: 7;
  box-sizing: border-box;
}

.main-timeline-handle:active {
  transform: translate(-50%, 0) scale(1.08);
  box-shadow:
    0 8rpx 24rpx rgba(32, 192, 92, 0.45),
    inset 0 0 0 3rpx rgba(255, 255, 255, 0.98);
  border-color: rgba(32, 192, 92, 0.85);
}

.main-timeline-time {
  display: none;
}

