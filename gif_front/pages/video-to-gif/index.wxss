.page {
  min-height: 100vh;
  padding: 24rpx 24rpx 140rpx;
  box-sizing: border-box;
}

.panel {
  border-radius: 26rpx;
  overflow: hidden;
}

.preview {
  position: relative;
  width: 100%;
  height: 560rpx;
  background: rgba(0, 0, 0, 0.04);
}

.video-container {
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.video {
  width: 100%;
  height: 100%;
}

/* 视频上的文字预览（非编辑模式） */
.video-text-preview {
  position: absolute;
  transform: translate(-50%, -50%);
  padding: 6rpx 12rpx;
  font-weight: 600;
  white-space: nowrap;
  z-index: 10;
  pointer-events: none;
}

/* 裁剪预览（主页显示裁剪效果） */
.crop-preview-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 5;
  pointer-events: none;
}

.crop-preview-mask {
  position: absolute;
  background: rgba(0, 0, 0, 0.5);
}

.crop-preview-mask-top {
  top: 0;
  left: 0;
  right: 0;
}

.crop-preview-mask-bottom {
  left: 0;
  right: 0;
  bottom: 0;
}

.crop-preview-mask-left {
  left: 0;
}

.crop-preview-mask-right {
  right: 0;
}

.crop-preview-box {
  position: absolute;
  border: 2rpx solid #20c05c;
  z-index: 6;
  /* 裁剪框内部是透明的，显示视频内容 */
  box-sizing: border-box;
}

.crop-preview-label {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  background: rgba(32, 192, 92, 0.9);
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  font-weight: 600;
  z-index: 7;
  white-space: nowrap;
}

.placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.placeholder-title {
  font-size: 34rpx;
  font-weight: 700;
}

.placeholder-desc {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.55);
}

.timeline {
  padding: 18rpx 18rpx 20rpx;
}

.time-text {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.65);
}

/* 截图风格：控制条 + 刻度尺 + 选区双手柄 */
.control-bar {
  height: 78rpx;
  padding: 0 16rpx;
  border-radius: 18rpx;
  background: rgba(255, 255, 255, 0.85);
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.control-center {
  flex: 1;
  display: flex;
  justify-content: center;
}

.play-btn {
  height: 56rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 8rpx;
}

/* 播放全篇按钮 - 简洁圆形 */
.play-btn-full {
  width: 72rpx;
  background: rgba(255, 255, 255, 0.95);
  border: 1px solid rgba(0, 0, 0, 0.1);
}

.play-btn-full.play-btn-active {
  background: rgba(50, 50, 50, 0.9);
}

.play-btn-full.play-btn-active .play-icon {
  color: #fff;
}

/* 播放片段按钮 - 绿色强调 */
.play-btn-segment {
  width: 120rpx;
  background: linear-gradient(135deg, #2ad268, #20c05c);
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(32, 192, 92, 0.3);
}

.play-btn-segment.play-btn-active {
  background: linear-gradient(135deg, #1a9e4a, #18a048);
}

.play-icon {
  font-size: 32rpx;
  font-weight: 800;
  color: rgba(0, 0, 0, 0.85);
}

.play-icon-small {
  font-size: 24rpx;
  font-weight: 700;
  color: #fff;
  margin-right: 4rpx;
}

.play-label {
  font-size: 22rpx;
  font-weight: 600;
  color: #fff;
}

.control-right {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.tool-btn {
  width: 54rpx;
  height: 54rpx;
  border-radius: 14rpx;
  background: rgba(255, 255, 255, 0.95);
  border: 1px solid rgba(0, 0, 0, 0.06);
  display: flex;
  align-items: center;
  justify-content: center;
}

.tool-text {
  font-size: 28rpx;
  font-weight: 700;
  color: rgba(0, 0, 0, 0.7);
}

.ruler {
  margin-top: 14rpx;
}

.ruler-track {
  position: relative;
  height: 118rpx; /* 增加高度容纳更大的滑块 */
  border-radius: 18rpx;
  background: rgba(255, 255, 255, 0.85);
  overflow: visible; /* 允许滑块超出边界便于触摸 */
  box-sizing: border-box;
}

.ruler-inner {
  position: relative;
  height: 100%;
  margin: 0 36rpx; /* 左右留出空间给滑块 */
}

.crown-edge {
  position: absolute;
  left: 8rpx;
  right: 8rpx;
  height: 10rpx;
  border-radius: 999rpx;
  opacity: 0.55;
  z-index: 0; /* 放到最底层，避免遮挡刻度数字 */
  pointer-events: none;
  background-image: repeating-linear-gradient(
    90deg,
    rgba(0, 0, 0, 0.18) 0,
    rgba(0, 0, 0, 0.18) 2rpx,
    rgba(0, 0, 0, 0.02) 2rpx,
    rgba(0, 0, 0, 0.02) 6rpx
  );
  background-color: rgba(255, 255, 255, 0.65);
}

.crown-top {
  top: 4rpx;
}

.crown-bottom {
  bottom: 8rpx;
}

.ruler-track-dragging {
  background: rgba(245, 255, 250, 0.98);
  box-shadow: 
    inset 0 0 0 3rpx rgba(32, 192, 92, 0.35),
    0 0 20rpx rgba(32, 192, 92, 0.15);
}

/* 拖动时刻度线高亮 */
.ruler-track-dragging .tick {
  background: rgba(32, 192, 92, 0.5);
}

.ruler-track-dragging .tick-big {
  background: rgba(32, 192, 92, 0.8);
}

.ruler-scrub {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  height: 52rpx; /* 只覆盖刻度区域，不挡住下方手柄 */
  z-index: 4;
  background: transparent;
  border-radius: 12rpx 12rpx 0 0;
  transition: background 0.15s ease;
}

/* 触摸刻度区域时的视觉反馈 */
.ruler-scrub:active {
  background: linear-gradient(
    180deg,
    rgba(32, 192, 92, 0.08) 0%,
    rgba(32, 192, 92, 0.02) 100%
  );
}

.tick {
  position: absolute;
  top: 40rpx;
  width: 2rpx;
  background: rgba(0, 0, 0, 0.25);
  transform: translateX(-50%); /* 居中对齐，和指针一致 */
}

.tick-small {
  height: 8rpx;
  opacity: 0.3;
  width: 1rpx;
}

.tick-mid {
  height: 20rpx;
  opacity: 0.65;
  width: 2rpx;
  background: rgba(0, 0, 0, 0.4);
}

.tick-big {
  height: 30rpx;
  opacity: 0.95;
  width: 2rpx;
  background: rgba(0, 0, 0, 0.55);
}

.tick-label {
  position: absolute;
  top: -20rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 18rpx;
  color: rgba(0, 0, 0, 0.65);
  background: rgba(255, 255, 255, 0.92);
  padding: 2rpx 8rpx;
  border-radius: 8rpx;
  z-index: 6;
  white-space: nowrap;
}

.range-fill {
  position: absolute;
  left: 0;
  top: 58rpx; /* 和增大的滑块对齐 */
  height: 40rpx;
  border-radius: 14rpx;
  background: linear-gradient(180deg, rgba(42, 210, 104, 0.92), rgba(32, 192, 92, 0.88));
  box-sizing: border-box;
  z-index: 1;
  min-width: 10rpx; /* 极短片段也能看见一点绿色 */
  transition: box-shadow 0.1s ease, transform 0.1s ease;
}

/* 触摸绿色条时的反馈 */
.range-fill:active {
  box-shadow: 0 4rpx 16rpx rgba(32, 192, 92, 0.4);
  transform: scaleY(1.1);
}

.range-pointer {
  position: absolute;
  top: 46rpx; /* 指向刻度区域（箭头向上） */
  width: 0;
  height: 0;
  transform: translateX(-50%);
  z-index: 7;
  border-left: 6rpx solid transparent;  /* 更细 */
  border-right: 6rpx solid transparent; /* 更细 */
  border-bottom: 10rpx solid rgba(255, 70, 70, 0.95); /* 向上指针 */
  filter: drop-shadow(0 3rpx 6rpx rgba(0, 0, 0, 0.16));
  pointer-events: none; /* 不抢手柄触摸 */
}

.range-pointer-left {
  opacity: 0.9;
}

.range-pointer-right {
  opacity: 0.9;
}

.handle-v2 {
  position: absolute;
  top: 50rpx;
  width: 56rpx; /* 加宽方便手指操作 */
  height: 56rpx; /* 加高方便手指操作 */
  background-color: rgba(255, 255, 255, 0.98);
  background-image: repeating-linear-gradient(
    90deg,
    rgba(0, 0, 0, 0.18) 0,
    rgba(0, 0, 0, 0.18) 2rpx,
    rgba(0, 0, 0, 0.04) 2rpx,
    rgba(0, 0, 0, 0.04) 6rpx
  );
  border: 3rpx solid rgba(32, 192, 92, 0.95);
  box-sizing: border-box;
  border-radius: 14rpx;
  transform: translateX(-50%);
  z-index: 5; /* 提高层级确保可点击 */
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.18);
  transition: transform 0.1s ease, box-shadow 0.1s ease, border-color 0.1s ease;
}

/* 触摸滑块时放大效果 */
.handle-v2:active {
  transform: translateX(-50%) scale(1.15);
  border-color: rgba(32, 192, 92, 1);
  box-shadow: 0 12rpx 28rpx rgba(32, 192, 92, 0.35);
}

.range-labels-v2 {
  margin-top: 8rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 6rpx;
}

.range-label {
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.55);
}

.sliders {
  display: none;
}

.options {
  margin-top: 18rpx;
  border-radius: 26rpx;
  overflow: hidden;
}

.tip {
  padding: 18rpx 20rpx;
}

.tip-title {
  display: block;
  font-size: 26rpx;
  font-weight: 800;
  color: rgba(0, 0, 0, 0.72);
}

.tip-content {
  display: block;
  margin-top: 10rpx;
  font-size: 22rpx;
  color: rgba(0, 0, 0, 0.5);
  line-height: 32rpx;
  white-space: pre-wrap;
}

.opt-row {
  padding: 22rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.opt-label {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.7);
}

.opt-value {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.5);
}

.divider {
  height: 1px;
  background: rgba(0, 0, 0, 0.08);
  transform: scaleY(0.5);
}

.bottom {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 18rpx 24rpx 24rpx;
  box-sizing: border-box;
}

.btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  border-radius: 22rpx;
  font-size: 34rpx;
  font-weight: 700;
}

.result {
  margin-top: 18rpx;
  border-radius: 26rpx;
  padding: 16rpx 18rpx 18rpx;
  box-sizing: border-box;
}

.result-title {
  font-size: 28rpx;
  font-weight: 800;
  margin-bottom: 12rpx;
}

.result-img {
  width: 100%;
  border-radius: 18rpx;
  overflow: hidden;
  background: rgba(0, 0, 0, 0.04);
}

.result-actions {
  margin-top: 14rpx;
}

.progress {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.55);
  text-align: center;
}

/* ========== 文字编辑面板 - 全屏模式 ========== */
.text-fullscreen {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: #1a1a1a;
  z-index: 200;
  display: flex;
  flex-direction: column;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s ease, visibility 0.3s ease;
}

.text-fullscreen-show {
  opacity: 1;
  visibility: visible;
}

/* 顶部栏 */
.text-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  padding-top: calc(20rpx + env(safe-area-inset-top));
  background: #1a1a1a;
}

.text-header-btn {
  font-size: 28rpx;
  color: #fff;
  padding: 12rpx 24rpx;
}

.text-header-done {
  color: #20c05c;
  font-weight: 600;
}

.text-header-title {
  font-size: 32rpx;
  color: #fff;
  font-weight: 600;
}

/* 视频预览区域 */
.text-video-area {
  flex: 1;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #000;
  overflow: hidden;
}

.text-video-bg {
  width: 100%;
  height: 100%;
}

/* 可拖拽文字框 */
.text-drag-box {
  position: absolute;
  transform: translate(-50%, -50%);
  padding: 16rpx 24rpx;
  font-weight: 600;
  white-space: nowrap;
  cursor: move;
  touch-action: none;
  z-index: 10;
}

.text-drag-box .text-content {
  position: relative;
  z-index: 2;
}

.text-drag-box .text-border {
  position: absolute;
  top: -8rpx;
  left: -8rpx;
  right: -8rpx;
  bottom: -8rpx;
  border: 4rpx solid #fff;
  border-radius: 12rpx;
  pointer-events: none;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.4);
}

.text-drag-box .text-ctrl {
  position: absolute;
  width: 52rpx;
  height: 52rpx;
  background: #333;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #fff;
  z-index: 3;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.4);
}

.text-drag-box .text-ctrl-delete {
  top: -26rpx;
  left: -26rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.text-drag-box.text-dragging .text-border {
  border-color: #20c05c;
  border-style: dashed;
}

/* 底部编辑区 */
.text-edit-area {
  background: #f5f5f5;
  border-radius: 32rpx 32rpx 0 0;
  padding-bottom: env(safe-area-inset-bottom);
}

/* 拖拽提示 */
.text-drag-tip {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
  margin-bottom: 16rpx;
  background: rgba(32, 192, 92, 0.1);
  border-radius: 12rpx;
  gap: 12rpx;
}

.text-drag-tip-icon {
  font-size: 36rpx;
}

.text-drag-tip-text {
  font-size: 26rpx;
  color: #20c05c;
  font-weight: 500;
}

/* 输入框区域 */
.text-input-row {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: #fff;
  gap: 16rpx;
}

.text-input {
  flex: 1;
  height: 80rpx;
  padding: 0 24rpx;
  background: #f5f5f5;
  border-radius: 16rpx;
  font-size: 28rpx;
}

.text-done-btn {
  width: 120rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: linear-gradient(135deg, #2ad268, #20c05c);
  color: #fff;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 16rpx;
}

/* 标签页 */
.text-tabs {
  display: flex;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.text-tab {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.text-tab-active {
  color: #20c05c;
  font-weight: 600;
}

.text-tab-active::after {
  content: '';
  position: absolute;
  left: 50%;
  bottom: 0;
  transform: translateX(-50%);
  width: 48rpx;
  height: 4rpx;
  background: #20c05c;
  border-radius: 2rpx;
}

/* 标签页内容 */
.text-tab-content {
  flex: 1;
  overflow-y: auto;
  background: #f5f5f5;
}

.text-tab-pane {
  padding: 24rpx;
}

/* 颜色选择器 */
.color-picker {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  padding: 16rpx 0;
}

.color-item {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  border: 4rpx solid transparent;
  box-sizing: border-box;
  transition: all 0.2s ease;
}

.color-item-active {
  border-color: #20c05c;
  transform: scale(1.1);
  box-shadow: 0 4rpx 12rpx rgba(32, 192, 92, 0.4);
}

.color-item-none {
  background: #fff;
  border: 2rpx solid #ddd;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #999;
}

/* 滑块行 */
.slider-row {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  gap: 16rpx;
}

.slider-label {
  width: 80rpx;
  font-size: 26rpx;
  color: #666;
}

.slider {
  flex: 1;
}

.slider-value {
  width: 60rpx;
  font-size: 26rpx;
  color: #333;
  text-align: right;
}

/* 位置选择九宫格 */
.text-section-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.text-position-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  max-width: 300rpx;
  margin-bottom: 32rpx;
}

.text-pos-item {
  width: 80rpx;
  height: 80rpx;
  background: #fff;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #666;
  border: 2rpx solid #eee;
  transition: all 0.2s ease;
}

.text-pos-active {
  background: #20c05c;
  color: #fff;
  border-color: #20c05c;
}

/* 字号选择 */
.text-size-row {
  display: flex;
  gap: 16rpx;
}

.text-size-item {
  width: 100rpx;
  height: 72rpx;
  background: #fff;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #666;
  border: 2rpx solid #eee;
  transition: all 0.2s ease;
}

.text-size-active {
  background: #20c05c;
  color: #fff;
  border-color: #20c05c;
}

/* ========== 裁剪面板 - 全屏模式 ========== */
.crop-fullscreen {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: #1a1a1a;
  z-index: 200;
  display: flex;
  flex-direction: column;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s ease, visibility 0.3s ease;
  /* 阻止滑动返回 */
  touch-action: none;
  -webkit-overflow-scrolling: touch;
}

.crop-fullscreen-show {
  opacity: 1;
  visibility: visible;
}

/* 顶部栏 */
.crop-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  padding-top: calc(20rpx + env(safe-area-inset-top));
  background: #1a1a1a;
}

.crop-header-btn {
  font-size: 28rpx;
  color: #fff;
  padding: 12rpx 24rpx;
}

.crop-header-done {
  color: #20c05c;
  font-weight: 600;
}

.crop-header-title {
  font-size: 32rpx;
  color: #fff;
  font-weight: 600;
}

/* 视频预览区域 */
.crop-video-area {
  flex: 1;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #000;
  overflow: hidden;
  padding: 40rpx;
  box-sizing: border-box;
}

.crop-video-wrapper {
  position: absolute;
  top: 40rpx;
  left: 40rpx;
  right: 40rpx;
  bottom: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  /* wrapper 正好填充减去 padding 后的区域，这样裁剪框就基于视频区域 */
}

.crop-video-bg {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

/* 裁剪框 */
.crop-box {
  position: absolute;
  border: 2rpx solid #20c05c;
  z-index: 15;
  box-shadow: 0 0 0 0 rgba(0, 0, 0, 0);
}

.crop-box.crop-dragging {
  border-color: #20c05c;
}

/* 网格线 */
.crop-grid {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
}

.crop-grid-line {
  position: absolute;
  background: rgba(255, 255, 255, 0.3);
}

.crop-grid-v1 {
  left: 33.33%;
  top: 0;
  bottom: 0;
  width: 1rpx;
}

.crop-grid-v2 {
  left: 66.66%;
  top: 0;
  bottom: 0;
  width: 1rpx;
}

.crop-grid-h1 {
  top: 33.33%;
  left: 0;
  right: 0;
  height: 1rpx;
}

.crop-grid-h2 {
  top: 66.66%;
  left: 0;
  right: 0;
  height: 1rpx;
}

/* 拖动区域 */
.crop-drag-area {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  cursor: move;
  touch-action: none;
  -webkit-user-select: none;
  user-select: none;
}

/* 调整大小的控制点 */
.crop-handle {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  background: #20c05c;
  border: 2rpx solid #fff;
  border-radius: 50%;
  z-index: 11;
  touch-action: none;
  -webkit-user-select: none;
  user-select: none;
}

.crop-handle-tl {
  top: -20rpx;
  left: -20rpx;
  cursor: nw-resize;
}

.crop-handle-tr {
  top: -20rpx;
  right: -20rpx;
  cursor: ne-resize;
}

.crop-handle-bl {
  bottom: -20rpx;
  left: -20rpx;
  cursor: sw-resize;
}

.crop-handle-br {
  bottom: -20rpx;
  right: -20rpx;
  cursor: se-resize;
}

.crop-handle-t {
  top: -20rpx;
  left: 50%;
  transform: translateX(-50%);
  cursor: n-resize;
}

.crop-handle-b {
  bottom: -20rpx;
  left: 50%;
  transform: translateX(-50%);
  cursor: s-resize;
}

.crop-handle-l {
  left: -20rpx;
  top: 50%;
  transform: translateY(-50%);
  cursor: w-resize;
}

.crop-handle-r {
  right: -20rpx;
  top: 50%;
  transform: translateY(-50%);
  cursor: e-resize;
}

/* 遮罩层 - 未选中区域暗，选中区域亮 */
.crop-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 8;
}

.crop-overlay-top,
.crop-overlay-bottom {
  width: 100%;
  background: rgba(0, 0, 0, 0.6);
}

.crop-overlay-middle {
  display: flex;
  width: 100%;
}

.crop-overlay-left,
.crop-overlay-right {
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
}

.crop-overlay-center {
  height: 100%;
  /* 选中区域：无遮罩，保持透明 */
  background: transparent;
}

/* 底部裁剪比例选择 */
.crop-footer {
  padding: 24rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background: #1a1a1a;
}

.crop-ratio-label {
  font-size: 28rpx;
  color: #fff;
  margin-bottom: 20rpx;
}

.crop-ratio-list {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.crop-ratio-item {
  padding: 16rpx 32rpx;
  background: #2a2a2a;
  border: 2rpx solid #3a3a3a;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #fff;
  transition: all 0.2s ease;
}

.crop-ratio-active {
  background: #20c05c;
  border-color: #20c05c;
  color: #fff;
}


