.page {
  min-height: 100vh;
  padding: 0 0;
  /* 顶部整体高度 = 状态栏安全区 + 工具栏高度（64rpx） */
  padding-top: calc(env(safe-area-inset-top) + 64rpx);
  padding-bottom: calc(env(safe-area-inset-bottom) + 120rpx);
  box-sizing: border-box;
  position: relative;
  display: flex;
  flex-direction: column;
  /* 阻止系统返回手势 */
  touch-action: auto;
}

/* 左侧边缘触摸拦截区域（防止华为手机系统返回手势误触） */
.edge-touch-blocker {
  position: fixed;
  left: 0;
  top: 0;
  bottom: 0;
  width: 30rpx;
  z-index: 9999;
  background: transparent;
  /* 阻止触摸事件穿透 */
  touch-action: none;
  pointer-events: auto;
}

/* 顶部工具栏（右上角） */
.top-toolbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  /* 工具栏高度收窄一点，让 320p 这一行更贴近顶部 */
  height: 64rpx;
  padding: 0 24rpx;
  /* 只保留安全区域内边距，元素紧贴紫色框上下边缘 */
  padding-top: env(safe-area-inset-top);
  display: flex;
  align-items: center;
  justify-content: space-between;
  z-index: 100;
  background: rgba(255, 255, 255, 0.98);
  backdrop-filter: blur(10rpx);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  pointer-events: none;
  box-sizing: border-box;
}

.top-toolbar-left {
  flex: 1;
}

.top-toolbar-right {
  display: flex;
  align-items: center;
  gap: 12rpx;
  pointer-events: auto;
}

.top-toolbar-item {
  width: 140rpx;
  height: 56rpx;
  padding: 0 18rpx;
  border-radius: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 6rpx;
  background: rgba(255, 255, 255, 0.92);
  border: 1rpx solid rgba(0, 0, 0, 0.08);
  box-shadow: 0 4rpx 14rpx rgba(0, 0, 0, 0.08);
  box-sizing: border-box;
}

.top-toolbar-text {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
  max-width: 96rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  line-height: 1;
}

.top-toolbar-icon {
  font-size: 18rpx;
  color: #999;
  margin-left: 2rpx;
  line-height: 1;
}

.top-toolbar-export {
  width: 140rpx;
