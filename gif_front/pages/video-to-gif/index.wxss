  bottom: 0;
  background: rgba(0, 0, 0, 0);
  z-index: 1000;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
}

.edit-drawer-mask-show {
  opacity: 1;
  pointer-events: none;
  background: rgba(0, 0, 0, 0);
}

.edit-drawer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #121212;
  border-radius: 32rpx 32rpx 0 0;
  z-index: 1001;
  height: 48vh;
  max-height: 60vh;
  transform: translateY(100%);
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  display: flex;
  flex-direction: column;
  padding-bottom: env(safe-area-inset-bottom);
  box-sizing: border-box;
  box-shadow: 0 -18rpx 60rpx rgba(0, 0, 0, 0.55);
}

.edit-drawer-show {
  transform: translateY(0);
}

.edit-drawer-fill {
  max-height: none;
}

.edit-drawer-crop {
  max-height: 34vh;
}

.edit-drawer-crop .edit-component,
.edit-drawer-crop .text-edit-content {
  flex: 0 0 auto;
}

/* 抽屉顶部按钮 */
.drawer-close-fab {
  position: absolute;
  top: 16rpx;
  right: 24rpx;
  z-index: 1002;
  padding: 10rpx 18rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.12);
  color: rgba(255, 255, 255, 0.9);
  font-size: 26rpx;
}

/* 编辑组件 */
.edit-component {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  background: #121212;
  box-sizing: border-box;
}

/* 文字编辑标签页滚动 */
.text-tabs-scroll {
  white-space: nowrap;
  margin-bottom: 0;
  flex-shrink: 0;
  background: #121212;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.08);
}

.text-tabs {
  display: inline-flex;
  gap: 8rpx;
}

.text-tabs {
  padding: 0 12rpx;
  padding-bottom: 8rpx;
  padding-right: 180rpx;
}

.text-tab {
  display: inline-block;
  padding: 8rpx 12rpx;
  background: transparent;
  border-radius: 0;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  white-space: nowrap;
  transition: all 0.2s;
  position: relative;
}

.text-tab-active {
  color: #fff;
  font-weight: 500;
}

.text-tab-active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  width: 40rpx;
  height: 4rpx;
  background: #ff2d55;
  border-radius: 2rpx;
  transform: translateX(-50%);
}

/* 文字编辑内容区域 */
.text-edit-content {
  flex: 1;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  background: #121212;
  padding: 12rpx 24rpx 24rpx;
}

.text-tab-pane {
  padding: 24rpx 0;
}

.input-row {
  margin-bottom: 24rpx;
}

.text-input {
  width: 90%;
  min-height: 88rpx;
  height: auto;
  padding: 16rpx 24rpx;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 16rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #fff;
  border: 1rpx solid rgba(255, 255, 255, 0.12);
  box-sizing: border-box;
  display: block;
  margin: 0 auto;
  overflow-x: hidden;
  word-break: break-all;
  white-space: pre-wrap;
}

.slider-row {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.slider-label {
  width: 120rpx;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  flex-shrink: 0;
}

.slider {
  flex: 1;
  margin: 0 24rpx;
}

.color-picker {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.color-item {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border: 3rpx solid rgba(255, 255, 255, 0.18);
  transition: all 0.2s;
}

.color-item-active {
  border-color: #ff4757;
  transform: scale(1.1);
  border-width: 4rpx;
}

.animation-options {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.animation-item {
  padding: 16rpx 24rpx;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 999rpx;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  transition: all 0.2s;
  border: 1rpx solid rgba(255, 255, 255, 0.12);
}

.animation-item-active {
  background: rgba(255, 45, 85, 0.22);
  color: #fff;
  border-color: rgba(255, 45, 85, 0.8);
}

.crop-ratio-label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 16rpx;
  font-weight: 500;
}

.crop-ratio-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.crop-ratio-item {
  padding: 16rpx 32rpx;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 999rpx;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  transition: all 0.2s;
  border: 1rpx solid rgba(255, 255, 255, 0.12);
}

.crop-ratio-active {
  background: rgba(255, 45, 85, 0.22);
  color: #fff;
  border-color: rgba(255, 45, 85, 0.8);
}

/* 视频上的文字编辑模式 */
.video-text-editing .text-drag-box {
  position: relative;
  display: inline-block;
  padding: 8rpx;
  touch-action: none;
  user-select: none;
}

.text-drag-box {
  position: relative;
  display: inline-block;
  padding: 8rpx;
  touch-action: none;
  user-select: none;
  transform: none;
}

.text-content-wrap {
  display: inline-block;
  position: relative;
}

.text-edit-outline {
  position: absolute;
  top: -6rpx;
  left: -6rpx;
  right: -6rpx;
  bottom: -6rpx;
  border: 2rpx dashed #20c05c;
  border-radius: 12rpx;
  pointer-events: none;
  box-sizing: border-box;
}

.text-delete-btn {
  position: absolute;
  top: -20rpx;
  right: -20rpx;
  width: 40rpx;
  height: 40rpx;
  background: #ff4757;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  z-index: 10;
  box-shadow: 0 2rpx 8rpx rgba(255, 71, 87, 0.4);
}

.text-delete-btn-hidden {
  opacity: 0;
  pointer-events: none;
}

/* 裁剪编辑模式 */
.crop-editing {
  z-index: 100;
  pointer-events: auto;
}

.crop-editing .crop-preview-box {
  border: 2rpx solid #20c05c;
  box-shadow: none;
}

/* 全屏预览模态弹框 */
.fullscreen-preview-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.95);
  z-index: 10000;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
}

.fullscreen-preview-modal-show {
  opacity: 1;
  pointer-events: auto;
}

.fullscreen-preview-content {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  position: relative;
}

.fullscreen-preview-header {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  padding-top: calc(env(safe-area-inset-top) + 44rpx);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx;
  z-index: 10001;
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0.6), transparent);
}

.fullscreen-preview-title {
  font-size: 32rpx;
  color: #fff;
  font-weight: 600;
}

.fullscreen-preview-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: #fff;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
}

.fullscreen-preview-body {
  flex: 1;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.fullscreen-video {
  width: 100%;
  height: 100%;
}
