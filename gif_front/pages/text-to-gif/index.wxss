/* pages/text-to-gif/index.wxss */

.page {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
  box-sizing: border-box;
}

.top-toolbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.top-toolbar-left {
  flex: 1;
}

.top-toolbar-count-pill {
  background: rgba(255, 255, 255, 0.3);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  backdrop-filter: blur(10rpx);
}

.top-toolbar-right {
  display: flex;
  gap: 10rpx;
}

.ui-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  cursor: pointer;
}

.ui-btn-ghost {
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.ui-btn-green {
  background: #20c05c;
  color: white;
}

.ui-btn-icon {
  margin-right: 6rpx;
}

.panel {
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  padding: 20rpx;
  backdrop-filter: blur(10rpx);
}

.preview-panel {
  min-height: 200rpx;
}

.text-input-area {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.text-item {
  background: rgba(255, 255, 255, 0.1);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 10rpx;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: all 0.3s;
}

.text-item-active {
  border-color: #20c05c;
  background: rgba(32, 192, 92, 0.2);
}

.text-content {
  color: white;
  font-size: 32rpx;
  flex: 1;
  margin-right: 20rpx;
  word-break: break-all;
}

.del {
  width: 40rpx;
  height: 40rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 24rpx;
  cursor: pointer;
}

.empty {
  text-align: center;
  padding: 40rpx 0;
}

.empty-title {
  color: white;
  font-size: 36rpx;
  margin-bottom: 10rpx;
}

.empty-desc {
  color: rgba(255, 255, 255, 0.7);
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

.empty-actions {
  margin-top: 30rpx;
}

.options {
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  padding: 20rpx;
  backdrop-filter: blur(10rpx);
}

.opt-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  color: white;
  font-size: 32rpx;
}

.opt-row-tappable {
  cursor: pointer;
}

.opt-label {
  flex: 1;
  font-weight: 500;
}

.opt-value {
  display: flex;
  align-items: center;
  gap: 10rpx;
  color: #20c05c;
  font-weight: 500;
}

.opt-value-text {
  margin-right: 10rpx;
}

.opt-hint {
  color: rgba(255, 255, 255, 0.7);
  font-size: 24rpx;
  margin-top: -10rpx;
  margin-bottom: 20rpx;
  padding-left: 0;
}

.divider {
  height: 1rpx;
  background: rgba(255, 255, 255, 0.2);
  margin: 20rpx 0;
}

.slider {
  width: 100%;
  margin: 20rpx 0;
}

.color-picker {
  display: flex;
  align-items: center;
  gap: 10rpx;
  cursor: pointer;
}

.color-preview {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.result {
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  padding: 20rpx;
  backdrop-filter: blur(10rpx);
}

.result-title {
  color: white;
  font-size: 36rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
  text-align: center;
}

.result-img {
  width: 100%;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.result-actions {
  text-align: center;
}

.btn {
  width: 100%;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 32rpx;
  font-weight: 500;
  cursor: pointer;
  border: none;
}

.btn-primary {
  background: #20c05c;
  color: white;
}

.bottom {
  margin-top: 20rpx;
}

.progress {
  color: white;
  text-align: center;
  margin-top: 10rpx;
  font-size: 28rpx;
}

.keyboard-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
}

.keyboard-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}

.keyboard-card {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  border-radius: 20rpx 20rpx 0 0;
  padding: 20rpx;
  backdrop-filter: blur(10rpx);
}

.keyboard-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  color: white;
  font-size: 32rpx;
  font-weight: 500;
}

.keyboard-title {
  flex: 1;
  text-align: center;
}

.keyboard-btn {
  cursor: pointer;
  color: #20c05c;
}

.keyboard-body {
  margin-bottom: 20rpx;
}

.keyboard-input {
  width: 100%;
  min-height: 200rpx;
  background: rgba(255, 255, 255, 0.1);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 10rpx;
  padding: 20rpx;
  color: white;
  font-size: 32rpx;
  resize: none;
}

.keyboard-footer {
  text-align: center;
}