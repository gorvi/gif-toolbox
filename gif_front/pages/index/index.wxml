<view class="page safe-area">
  <view class="nav">
    <view class="nav-title">GIF制作工具箱</view>
    <view class="nav-actions">
      <view class="nav-action glass" bindtap="onTapTip">提示</view>
    </view>
  </view>

  <view class="banner-list">
    <block wx:for="{{bannerCards}}" wx:for-item="card" wx:key="key">
      <view class="banner-card glass-strong {{card.themeClass}} {{card.layoutClass}}">
        <image class="banner-bg-img" src="{{card.bg}}" mode="aspectFill" />
        <view class="banner-overlay"></view>
        <image wx:if="{{card.thumb}}" class="banner-side-img {{card.thumbClass}}" src="{{card.thumb}}" mode="aspectFill" />
        <view class="banner-content">
          <view class="banner-top">
            <view class="banner-title">{{card.title}}</view>
            <view class="banner-pill glass">{{card.pill}}</view>
          </view>
          <view class="banner-desc">{{card.desc}}</view>
          <view class="banner-actions">
            <view class="banner-btn {{card.btnClass}}" bindtap="onTapQuick" data-url="{{card.url}}" data-title="{{card.title}}">
              <text class="banner-btn-icon">{{card.icon}}</text>
              <text class="banner-btn-label">{{card.btnLabel}}</text>
            </view>
          </view>
        </view>
      </view>
    </block>
  </view>
</view>
