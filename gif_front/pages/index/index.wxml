<!-- 工具箱首页 -->
<view class="page safe-area">
  <view class="header">
    <view class="title">GIF制作工具箱</view>
    <view class="subtitle">端侧处理 · 失败直接提示</view>
  </view>

  <view class="grid">
    <block wx:for="{{tools}}" wx:key="key">
      <view class="card glass" bindtap="onTapTool" data-key="{{item.key}}" data-url="{{item.url}}">
        <view class="card-top">
          <view class="badge">GIF</view>
          <view class="tag" wx:if="{{item.tag}}">{{item.tag}}</view>
        </view>
        <view class="card-title">{{item.title}}</view>
        <view class="card-desc">{{item.desc}}</view>
      </view>
    </block>
  </view>

  <view class="footer glass">
    <view class="footer-left">
      <view class="footer-title">提示</view>
      <view class="footer-desc">视频截取最长10秒；建议 480p + 5FPS</view>
    </view>
    <view class="footer-action" bindtap="onTapLogs">日志</view>
  </view>
</view>
