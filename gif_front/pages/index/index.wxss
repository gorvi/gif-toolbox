.page {
  min-height: 100vh;
  padding: 34rpx 28rpx 32rpx;
  box-sizing: border-box;
}

.nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 8rpx;
  margin-bottom: 18rpx;
}

.nav-title {
  font-size: 44rpx;
  font-weight: 800;
  letter-spacing: 0.5rpx;
}

.nav-actions {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.nav-action {
  padding: 12rpx 18rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
  font-weight: 700;
  color: rgba(0, 0, 0, 0.75);
}

.banner-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 22rpx;
}

.banner-card {
  position: relative;
  border-radius: 26rpx;
  padding: 22rpx 22rpx;
  overflow: hidden;
  min-height: 240rpx;
  box-sizing: border-box;
}

.banner-layout-right .banner-content {
  padding-right: 190rpx;
}

.banner-layout-left .banner-content {
  padding-left: 190rpx;
}

.banner-bg-img {
  width: 100%;
  height: 100%;
  display: block;
  transform: scale(1.08);
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
}

.banner-overlay {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 2;
  background:
    radial-gradient(900rpx 260rpx at 0% 0%, rgba(255, 255, 255, 0.85), rgba(255, 255, 255, 0) 68%),
    linear-gradient(180deg, rgba(255, 255, 255, 0.90), rgba(255, 255, 255, 0.76));
}

.banner-content {
  position: relative;
  z-index: 4;
}

.banner-side-img {
  position: absolute;
  width: 176rpx;
  height: 176rpx;
  top: 58rpx;
  border-radius: 26rpx;
  z-index: 3;
  box-shadow: 0 18rpx 46rpx rgba(0, 0, 0, 0.16);
  border: 1rpx solid rgba(255, 255, 255, 0.25);
  overflow: hidden;
  opacity: 0.95;
  pointer-events: none;
}

.banner-side-right {
  right: 18rpx;
}

.banner-side-left {
  left: 18rpx;
}

.banner-top {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
}

.banner-title {
  font-size: 36rpx;
  font-weight: 900;
}

.banner-pill {
  height: 56rpx;
  padding: 0 16rpx;
  border-radius: 999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 800;
  color: rgba(0, 0, 0, 0.72);
  box-sizing: border-box;
}

.banner-pill-arrow {
  margin-left: 6rpx;
  font-size: 26rpx;
  font-weight: 900;
  color: rgba(0, 0, 0, 0.45);
  line-height: 1;
}

.banner-desc {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.55);
}

.banner-actions {
  margin-top: 18rpx;
  display: flex;
}

.banner-btn {
  height: 62rpx;
  padding: 0 18rpx;
  border-radius: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  font-size: 24rpx;
  font-weight: 800;
  line-height: 1;
  box-sizing: border-box;
  overflow: hidden;
}

.banner-btn:active {
  transform: scale(0.98);
  opacity: 0.92;
}

.banner-btn-icon {
  font-size: 22rpx;
  font-weight: 900;
  line-height: 1;
}

.banner-btn-label {
  font-size: 22rpx;
  font-weight: 900;
  line-height: 1;
  white-space: nowrap;
}

.banner-btn-green {
  background: linear-gradient(135deg, rgba(42, 210, 104, 0.82), rgba(32, 192, 92, 0.82));
  border: 1rpx solid rgba(32, 192, 92, 0.12);
  box-shadow: 0 10rpx 22rpx rgba(32, 192, 92, 0.18);
  color: #fff;
}

.banner-btn-purple {
  background: linear-gradient(135deg, rgba(146, 84, 222, 0.72), rgba(118, 75, 162, 0.72));
  border: 1rpx solid rgba(146, 84, 222, 0.12);
  box-shadow: 0 10rpx 22rpx rgba(118, 75, 162, 0.14);
  color: #fff;
}

.banner-btn-blue {
  background: linear-gradient(135deg, rgba(47, 84, 235, 0.70), rgba(19, 194, 194, 0.62));
  border: 1rpx solid rgba(47, 84, 235, 0.10);
  box-shadow: 0 10rpx 22rpx rgba(47, 84, 235, 0.12);
  color: #fff;
}

.banner-btn-gray {
  background: linear-gradient(135deg, rgba(45, 55, 72, 0.82), rgba(17, 24, 39, 0.82));
  border: 1rpx solid rgba(255, 255, 255, 0.12);
  box-shadow: 0 10rpx 22rpx rgba(0, 0, 0, 0.18);
  color: #fff;
}

.banner-btn-orange {
  background: linear-gradient(135deg, rgba(250, 140, 22, 0.78), rgba(255, 77, 79, 0.70));
  border: 1rpx solid rgba(250, 140, 22, 0.12);
  box-shadow: 0 10rpx 22rpx rgba(250, 140, 22, 0.14);
  color: #fff;
}

.banner-theme-green .banner-title {
  color: rgba(0, 0, 0, 0.86);
}

.banner-theme-purple .banner-title {
  color: rgba(0, 0, 0, 0.86);
}

.banner-theme-blue .banner-title {
  color: rgba(0, 0, 0, 0.86);
}

.banner-theme-gray .banner-title {
  color: rgba(0, 0, 0, 0.86);
}

.banner-theme-orange .banner-title {
  color: rgba(0, 0, 0, 0.86);
}
