.page {
  min-height: 100vh;
  padding: 40rpx 32rpx 32rpx;
  box-sizing: border-box;
}

.header {
  margin-top: 12rpx;
  margin-bottom: 28rpx;
}

.title {
  font-size: 44rpx;
  font-weight: 700;
  letter-spacing: 1rpx;
}

.subtitle {
  margin-top: 10rpx;
  font-size: 26rpx;
  color: rgba(0, 0, 0, 0.55);
}

.grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 22rpx;
}

.card {
  border-radius: 22rpx;
  padding: 20rpx 20rpx 18rpx;
  box-sizing: border-box;
  min-height: 168rpx;
}

.card-disabled {
  opacity: 0.55;
}

.card-top {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 14rpx;
}

.badge {
  height: 44rpx;
  padding: 0 16rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  font-weight: 700;
  line-height: 44rpx;
  background: rgba(0, 0, 0, 0.06);
  color: rgba(0, 0, 0, 0.7);
}

.tag {
  font-size: 22rpx;
  color: rgba(0, 0, 0, 0.5);
}

.card-title {
  font-size: 32rpx;
  font-weight: 700;
}

.card-desc {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.55);
}

.footer {
  margin-top: 26rpx;
  border-radius: 22rpx;
  padding: 18rpx 18rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.footer-title {
  font-size: 26rpx;
  font-weight: 700;
}

.footer-desc {
  margin-top: 6rpx;
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.55);
}

.footer-action {
  padding: 12rpx 18rpx;
  border-radius: 999rpx;
  background: rgba(0, 0, 0, 0.06);
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.7);
}
