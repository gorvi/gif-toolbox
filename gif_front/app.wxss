/**app.wxss**/

page {
  background: radial-gradient(1200rpx 1200rpx at 20% 0%, #e9f2ff 0%, rgba(233, 242, 255, 0) 60%),
    radial-gradient(1200rpx 1200rpx at 100% 20%, #f6e9ff 0%, rgba(246, 233, 255, 0) 55%),
    linear-gradient(180deg, #f7f8fa 0%, #ffffff 60%);
  color: #111;
}

.safe-area {
  padding-bottom: env(safe-area-inset-bottom);
}

.glass {
  background: rgba(255, 255, 255, 0.55);
  border: 1px solid rgba(255, 255, 255, 0.55);
  box-shadow: 0 16rpx 40rpx rgba(0, 0, 0, 0.08);
  -webkit-backdrop-filter: blur(24px);
  backdrop-filter: blur(24px);
}

.glass-strong {
  background: rgba(255, 255, 255, 0.72);
  border: 1px solid rgba(255, 255, 255, 0.7);
  box-shadow: 0 18rpx 52rpx rgba(0, 0, 0, 0.10);
  -webkit-backdrop-filter: blur(28px);
  backdrop-filter: blur(28px);
}

.btn-primary {
  background: #20c05c;
  color: #fff;
  border-radius: 16rpx;
}
